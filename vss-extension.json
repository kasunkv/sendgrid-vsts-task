{
    "manifestVersion": 1,
    "id": "sendgrid-email",
    "name": "SendGrid Email",
    "publisher": "kasunkodagoda",
    "version": "0.0.0",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Azure DevOps task for sending emails using SendGrid from build/release definitions",
    "categories": [
        "Build and release"
    ],
    "screenshots": [
        {
            "path": "screenshots/screenshot-0.png"
        }
    ],
    "galleryFlags": [
        "Public"
    ],
    "tags": [ "email", "sendgrid", "email-service", "messaging" ],
    "icons": {
        "default": "marketplace-icon.png"        
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/kasunkv/sendgrid-vsts-task/wiki"
        },
        "support": {
            "uri": "https://github.com/kasunkv/sendgrid-vsts-task/issues"
        },
        "repository": {
            "uri": "https://github.com/kasunkv/sendgrid-vsts-task"
        },
        "issues": {
            "uri": "https://github.com/kasunkv/sendgrid-vsts-task/issues"
        }
    },
    "branding": {
        "color": "rgb(0, 95, 162)",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/kasunkv/sendgrid-vsts-task"
    },
    "files": [
        {
            "path": "dist/BuildTask"
        },
        {
            "path": "screenshots",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "sendgrid-email",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "dist/BuildTask/SendGridEmail"
            }
        }
    ],
    "CustomerQnASupport": {
        "enableqna":"true"
    } 
}